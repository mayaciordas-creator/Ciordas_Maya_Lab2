@page
@model Ciordas_Maya_Lab2.Pages.Authors.IndexModel
@{
    ViewData["Title"] = "Authors";
}

<h1>Authors</h1>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model.Authors)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@author.ID">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@author.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-page="./Create" class="btn btn-primary">Add New Author</a>

